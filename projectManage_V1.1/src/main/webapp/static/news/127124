   <tr> 
    <td valign="top" width="71"> <p>9-12月</p></td> 
    <td valign="top" width="71"> <p>73.0</p></td> 
    <td valign="top" width="71"> <p>9.0</p></td> 
    <td valign="top" width="71"> <p>900</p></td> 
