		async : true,
		success:function(data){
			if (data != null && data.lId != null && data.lId > 0)
			{
				$("#needLogin").hide();
				$("#allreadyLogin").show();
				$("#nickName").html(data.strNickName);
			}
			else
			{
				$("#needLogin").show();
			}
		}
	});
}
	
